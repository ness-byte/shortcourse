{
  "name": "Short Course Design Library extension",
  "version": "1.0",
  "description": "Code snippets for ACU Short Courses",
  "manifest_version": 3,
  "author": "Alana Faigen; Agnes Au; Matt Ryan",
  "browser_specific_settings": {
    "gecko": {
    "id": "snippy@nessbyte.anonaddy.me"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; frame-ancestors 'none'; default-src 'none'; connect-src https://api.github.com;"
    }
},
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Short Course Design Library extension",
    "default_icon": "icon.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "browser-detect.js", "foreground.js"]
    }
  ],

  "web_accessible_resources": [
  {
    "resources": ["config.js"],
    "matches": ["<all_urls>"]
  }
  ],

  "storage": {
  },

  "host_permissions": [
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*"
  ]

}
